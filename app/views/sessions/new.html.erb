<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(パスワードを忘れた)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>パスワードを記憶する</span>
      <% end %>

      <div class="mt-3"><%= f.submit "ログイン", class: "btn btn-primary block" %></div>
    <% end %>

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      
      <%= f.hidden_field :email, :value => 'guest-user@example.com' %>
      <%= f.hidden_field :password, :value => 'foobar' %>

      <%= f.submit "ゲストユーザーでログイン", class: "btn btn-warning" %>

    <% end %>
  </div>
</div>