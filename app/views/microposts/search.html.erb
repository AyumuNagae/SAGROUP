<div class="row">
  <div class="col-md-5">
    <div class="container-fluid">
      <h1>ゲーム名から検索する</h1>
      <%= form_with url: search_microposts_path, method: :get, local: true do |f| %>
        <%= f.text_field :game_category, placeholder: "ゲーム名を入力してください… (〇〇を含むタイトルを検索)" %>
        <%= f.submit "検索する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<ul class="microposts">
  <%= render @microposts %>
  <%= will_paginate @microposts, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
</ul>