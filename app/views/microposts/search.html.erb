<div class="row">
  <div class="col-md-12">
    <div class="container-fluid center">
      <h1>ゲーム名から検索する</h1>
      <div class="search_form">
      <%= form_with url: search_microposts_path, method: :get, local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :game_category, placeholder: "ゲーム名を入力してください…" , class: 'form-control' %>
          <span class="input-group-btn">
            <%= f.submit "検索", class: "btn btn-primary mb-5 shita" %>
          </span>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<ul class="microposts">
  <%= render @microposts %>
  <%= will_paginate @microposts, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
</ul>