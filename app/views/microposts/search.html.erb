<div class="row">
  <div class="col-md-7">
    <div class="pull-right">
<h1>ゲーム名から検索する</h1>
<%= form_with url: search_microposts_path, method: :get, local: true do |f| %>
  <%= f.text_field :game_category, placeholder: "ゲーム名を入力してください…" %>
  <%= f.submit "検索する", class: "btn btn-primary" %>
<% end %>
    </div>
  </div>
</div>

<ul class="microposts">
  <%= render @microposts %>
</ul>