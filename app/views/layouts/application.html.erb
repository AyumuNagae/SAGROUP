<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all',
                               'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application',
                               'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
    <script src="https://kit.fontawesome.com/72c82da7f6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="small.css" media="screen and (max-width:480px)">
    <link rel="stylesheet" href="medium.css" media="screen and (min-width:480px) and (max-width:1024px)">
    <link rel="stylesheet" href="wide.css" media="screen and (min-width:1024px)">
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
