<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content">
    <p><%= comment.content %></p>
  </span>
  <span class="timestamp">Posted <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user?(comment.user) %>
      <%= link_to "削除する", [comment.micropost, comment], method: :delete,
                                        data: { confirm: "削除しますか" },class:"default-link" %>
    <% end %>
  </span>
</li>